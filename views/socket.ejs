<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/main.css" />
    <title>Document</title>
  </head>
  <body>
    <!-- nav bar -->
    <%- include('nav.html') %>

    <!-- main -->
    <div>채팅방</div>
    <input type="text" id="input-box" />
    <button id="sending">서버에 메시지 보내기</button>
    <button id="chat-room-one">chat room no.one</button>
    <button id="room1-send">chat1 chatting</button>
    <!-- Socekt.io -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.3/socket.io.js"
      integrity="sha512-iWPnCISAd/J+ZacwV2mbNLCaPGRrRo5OS81lKTVPtRg1wGTC20Cfmp5Us5RcbLv42QLdbAWl0MI57yox5VecQg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <!-- javascript -->
    <script>
      var socket = io();
      $("#room1-send").click(function () {
        socket.emit("room1-send", "hello chat1");
      });
      $("#chat-room-one").click(function () {
        socket.emit("joinRoom", "enterTheRoom");
      });

      $("#sending").click(function () {
        socket.emit("user-send", $("#input-box").val());
      });
      socket.on("broadcast", function (data) {
        $("#content").append(`<div>${data}</div>`);
      });
    </script>
  </body>
</html>
